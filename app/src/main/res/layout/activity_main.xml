<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ensias"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/color"
            android:scaleType="centerCrop"
            android:alpha="0.8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:text="Are you a visitor ?"
                android:textColor="@color/white"
                android:background="@drawable/shape2"
                android:fontFamily="@font/dmsansbold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logoensiasar"
                android:layout_marginTop="100dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logotext"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weâ€™re your eyes to discover ENSIAS"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsansreg"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:gravity="center" />
            <Button
                android:id="@+id/button2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Log in with Institutional mail"
                android:textColor="@color/white"
                android:background="@drawable/shape2"
                android:fontFamily="@font/dmsansbold"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="130dp"/>
            <Button
                android:layout_width="350dp"
                android:id="@+id/sign_in_button"
                android:layout_height="wrap_content"
                android:text="Sign up with Institutional mail"
                android:textColor="#EA8248"
                android:background="@drawable/shape"
                android:fontFamily="@font/dmsansbold"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>